---
const { cardContent } = Astro.props;
---

<ul class="full-width">
  {
    cardContent.map((card) => (
      <li>
        <h3>{card.title}</h3>
        <p>{card.body}</p>
      </li>
    ))
  }
</ul>

<style>
  .full-width {
    display: flex;
    > * {
      grid-column: 2;
    }

    > ul {
      scroll-snap-type: x mandatory;
      grid-column: 1 / -1;
      padding-inline: max(1rem, 50% - var(--content-width) / 2);
      padding-block-end: 1rem;

      li {
        scroll-snap-align: center;
      }
    }
  }

  ul {
    gap: 1rem;
    overflow-x: auto;
    list-style: none;

    li {
      flex-basis: min(400px, 90%);
      flex-shrink: 0;
      background: #ebebeb;
      color: #595566;
      align-self: start;
    }
  }
</style>
