---
const { title, body, imgSrc } = Astro.props;
---

<li>
  <img src={imgSrc} alt={title} />
  <div class="content">
    <h3>{title}</h3>
    <p>{body}</p>
  </div>
</li>

<style>
  li {
    --transition: 0.3s cubic-bezier(0.22, 0.03, 0.26, 1);

    :has(> &) {
      display: flex;
      gap: 1rem;
    }
    border-radius: 1rem;
    flex: var(--expand, 1);
    block-size: 45vmin;
    background: #000;
    overflow: clip;
    isolation: isolate;
    transition: var(--transition);
    transition-property: flex;

    display: grid;

    > * {
      grid-area: 1 / 1;
    }

    &:hover {
      --expand: 1.3;
      --row-height: 1fr;
      --shown: 1;
    }
  }

  img {
    align-self: stretch;
    object-fit: cover;
    mask: linear-gradient(0deg, transparent 0%, black 50%);
    z-index: -1;
    object-position: var(--pos, 0%) 50%;

    li:nth-child(2) & {
      --pos: 25%;
    }
    li:nth-child(3) & {
      --pos: 75%;
    }
    li:nth-child(4) & {
      --pos: 100%;
    }
  }

  .content {
    padding: 1rem 1.25rem;
    align-self: end;
    color: #fff;
    width: min(25ch, 100% - 1rem);
    display: grid;
    grid-template-rows: min-content var(--row-height, 0fr);
    transition: var(--transition);
    transition-property: grid;

    h3 {
      font-size: 1.5rem;
      font-weight: 700;
    }

    p {
      margin-block-start: 0.25rem;
      color: #dadada;
      overflow: hidden;
      opacity: var(--shown, 0);
      transition: var(--transition);
      transition-property: opacity;
    }
  }
</style>
